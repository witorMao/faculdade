public class Carta {
	private char naipe;
	private char valor;
	
	public Carta(char n, char v) {
		this.naipe = n;
		this.valor = v;
	}
	
	public char getNaipe() {
		return this.naipe;
	}
	
	public char getValor() {
		return this.valor;
	}

	public char setNaipe(char n) {
		this.naipe = n;
	}
	
	public char setValor(char v) {
		this.valor = v;
	}
	
	public boolean comparaCartas(Carta p, Carta s) {
		if(p.getNaipe() == s.getNaipe() && p.getValor() == s.getValor()) return true;
		else return false;
	}
	
	public voidcopiaCartas(Carta p, Carta s) {
		p.setNaipe(s.getNaipe());
		p.setValor(s.getValor());
	}
}
